<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-left">
      </div>
      <div class="media-body">
        <% if task.id %>
          <div>
            <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
          </div>
          <div>
            <p><%= link_to task.content, task %>  : <%= task.status %></p>
          </div>
          <div>
            <% if current_user == task.user %>
              <%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか?' } , class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>